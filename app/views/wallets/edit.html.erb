<%= simple_form_for @wallet, html: { class: "form-horizontal" } do |f| %>
  <%= f.input :name %>
  <%= f.input :amount, as: :currency, wrapper: 'append' %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to t('back.wallets'), wallets_path %>
  </div>
<% end %>
