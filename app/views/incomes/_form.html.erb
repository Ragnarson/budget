<%= simple_form_for @income, html: { class: "form-horizontal" } do |f| %>
  <%= f.input :source %>
  <%= f.input :amount, as: :currency, wrapper: 'append' %>
  <%= f.input :execution_date, as: :date_picker %>
  <%= f.input :tax, as: :percent, wrapper: 'append' %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to t('back.income'), incomes_path %>
  </div>
<% end %>
